{
  "private": true,
  "name": "@stratebi/biserver-customization",
  "scripts": {
    "lint": "lerna run --stream lint",
    "build": "lerna run --stream build",
    "serve": "lerna run --stream serve",
    "upgradedeps": "run-s upgradedeps:root upgradedeps:packages",
    "upgradedeps:root": "ncu --upgrade",
    "upgradedeps:packages": "lerna exec --stream --concurrency 1 -- ncu --upgrade",
    "cleandeps": "run-s cleandeps:packages cleandeps:root",
    "cleandeps:root": "rimraf node_modules package-lock.json",
    "cleandeps:packages": "lerna exec -- rimraf node_modules package-lock.json",
    "postinstall": "lerna exec --stream --concurrency 1 -- npm install"
  },
  "devDependencies": {
    "lerna": "~3.16.4",
    "npm-check-updates": "~3.1.20",
    "npm-run-all": "~4.1.5",
    "rimraf": "~2.6.3"
  }
}
